<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a55123.Create_Account"
    android:background="#f0e68c" >

    <TextView
        android:id="@+id/create_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="CREATE NEW ACCOUNT"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/create_account_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="BACK"
        android:background="#6495ed"
        android:textColor="#ffffff"  />

    <Button
        android:id="@+id/create_account_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="CREATE"
        android:background="#ff0000"
        android:textColor="#ffffff" />

   <RelativeLayout
       android:id="@+id/create_account_relativelayout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/create_account_confirm"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:layout_below="@+id/create_account_back" >

       <TextView
           android:id="@+id/create_account_repassword"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/create_account_password"
           android:layout_marginTop="30dp"
           android:text="Re-Password: "
           android:textAppearance="?android:attr/textAppearanceLarge" />

       <EditText
           android:id="@+id/create_account_name_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_above="@+id/create_account_email"
           android:layout_alignBottom="@+id/create_account_name"
           android:layout_alignParentRight="true"
           android:ems="10"
           android:inputType="textPersonName"
           android:background="@drawable/shape" >

           <requestFocus />
       </EditText>

       <EditText
           android:id="@+id/create_account_email_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/create_account_email"
           android:layout_alignParentRight="true"
           android:ems="10"
           android:inputType="textEmailAddress"
           android:background="@drawable/shape" />

       <EditText
           android:id="@+id/create_account_password_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/create_account_password"
           android:layout_alignParentRight="true"
           android:ems="10"
           android:background="@drawable/shape" />

       <EditText
           android:id="@+id/create_account_repassword_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/create_account_repassword"
           android:layout_alignParentRight="true"
           android:ems="10"
           android:background="@drawable/shape" />

       <TextView
           android:id="@+id/create_account_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="49dp"
           android:text="Name: "
           android:textAppearance="?android:attr/textAppearanceLarge" />

       <TextView
           android:id="@+id/create_account_password"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/create_account_email"
           android:layout_marginTop="30dp"
           android:text="Password: "
           android:textAppearance="?android:attr/textAppearanceLarge" />

       <TextView
           android:id="@+id/create_account_email"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/create_account_name"
           android:layout_marginTop="30dp"
           android:text="E-Mail: "
           android:textAppearance="?android:attr/textAppearanceLarge" />

   </RelativeLayout>

</RelativeLayout>
